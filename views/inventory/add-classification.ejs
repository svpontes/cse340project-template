<!DOCTYPE html>
<html lang="en">
    <body>
        <h1 class="pageRegisterTitle">Add Vehicle Classification</h1>

        <%- messages() %>

            <form action="/inv/add-classification" method="POST" id="addClassificationForm">
                <label for="classification_name">Classification Name</label>
                <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$"
                    title="No spaces or special characters allowed.">
                <div>
                    <button class="btnAddVehicle" type="submit">Add Classification</button>
                </div>
            </form>
    </body>

</html>